{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "x/*": ["./src/*"]
    },
    "outDir": "dist",
    "plugins": [
      {
        "name": "typescript-tsd",
        "config": {}
      }
    ]
  },
  "include": ["src/**/*.ts"]
}
