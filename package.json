{
	"name": "x-repository-template",
	"version": "1.0.0",
	"description": "",
	"engines": {
		"node": ">=22.11",
		"pnpm": ">=10"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"onFail": "error"
		},
		"packageManager": {
			"name": "pnpm",
			"onFail": "error"
		}
	},
	"scripts": {
		"lint": "pnpm -r lint:fix",
		"app": "pnpm -F app",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "Masayuki Iizuka <mas.iizuka@gmail.com>",
	"devDependencies": {
		"@antfu/eslint-config": "5.4.1",
		"@tsconfig/recommended": "1.0.10",
		"eslint": "9.37.0",
		"husky": "9.1.7",
		"lint-staged": "16.2.3",
		"typescript": "5.9.3"
	},
	"lint-staged": {
		"**/*.{js,ts,jsx,tsx,json,jsonc,html,vue,astro,md,yaml}": "pnpm lint"
	}
}
